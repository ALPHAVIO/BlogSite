<div class="conatiner-center dashboard-box" style="width: 90%; padding: 3rem; margin: 6%">
    
    <div class="text-center">

        <h1 style="margin-bottom: 4rem">NewsLetter</h1>

        <% if (user.subscriptionStatus) { %>
            <form action="/newsletter/unsubscribe" method="POST">
                <button class="btnFrame" style= " font-size: 18px; font-weight: 500;" type="submit">Click Here to unsubscribe our newsletter</button>
            </form>
        <% }else{ %>
            <form action="/newsletter/subscribe" method="POST">
                <button class="btnFrame" style= " font-size: 18px; font-weight: 500;"  type="submit">Click Here to subscribe our newsletter</button>
            </form>
        <% } %>
        
    </div>
    
</div>