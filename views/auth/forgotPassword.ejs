<%- include("../partials/header", {isAuthenticated: false}) -%>

    <div class="col-md-4 mx-2 mx-md-auto my-5">

        <h1 class="text-center">Forgot your Password?</h1>
        <!-- display error if any while submitting the form -->
        <% if(error) { %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>
            <!-- forgot-password form section -->
            <div class="container-centre">
                <form action="/log-in" method="POST">
                    <div class="form-group">
                        <label>Enter the registered Email</label>
                        <input class="form-control col-md-12 col-sm-12 col-xs-12" type="email" name="email"
                            autocomplete="off" value="<%= data.email %>" required>
                    </div>
                    <br>
                    <button class="btn btn-primary log-in-btn" type="submit" name="log-in">Submit</button>
                </form>
            </div>
    </div>
    <script type="text/javascript" src="/js/showHidePassword.js"></script>
<%- include("../partials/footer") -%>